{
  "include": ["src/main/**/*", "src/types/*"],
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "target": "ES2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error", 
  }
}
